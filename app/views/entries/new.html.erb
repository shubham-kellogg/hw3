<h1>Add a New Entry for <%= @place.name %></h1>

<%= form_with model: [@place, @entry], local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  
  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :posted_on %><br>
    <%= form.date_field :posted_on %>
  </div>

  <div>
    <%= form.submit "Create Entry" %>
  </div>
<% end %>